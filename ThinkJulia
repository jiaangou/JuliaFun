#Writing functions
function fun()
    statement = "This is fun"
    return(statement)
end

#Call function within a function
function multiplier()
    fun()^3
end
multiplier()

#Exercise 3-2
#Write a function rightjustify() with a string s as argument and prints with enough leading spaces

function rightjustify(s)
    space = " "^70
    out = space*s
    println(out)
end

rightjustify("monty")

function printgrid()
    println("+ - - - - + - - - - +")
    println("|         |         |")
    println("|         |         |")
    println("|         |         |")
    println("|         |         |")
    println("+ - - - - + - - - - +")
    println("|         |         |")
    println("|         |         |")
    println("|         |         |")
    println("|         |         |")
    println("+ - - - - + - - - - +")
end

printgrid()


